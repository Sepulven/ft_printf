NAME 		= 		libftprintf.a

CC 			= 		gcc

CFLAGS 		= 		-Wall -Werror -Wextra 

SRC 		= 		main.c

OBJ			= ${SRC:%.c=%.o}

INCLUDES	=	ft_printf.h

RM		=		rm -rf

all: ${NAME}

%.o : %.c
	@${CC} ${CFLAGS} ${SRC} ${INCLUDES} -c

$(NAME): ${OBJ}
	@ar -rsc ${NAME} ${OBJ}

clean:
	@${RM} ${OBJ}

fclean:		clean
	@${RM} ${NAME}

re:	fclean ${NAME}

.PHONY: fclean clean all re